.ql-tinymce-form
  .ql-tinymce-form-group
    display: flex
    .ql-tinymce-form-item
      flex: 1
      &.flexunable
        flex: 0 1 auto
      .ql-tinymce-form-label
        font-size: 12px
        display: block
        line-height: 14px
        color: rgba(34,47,62,.7)
        font-weight: 400
        line-height: 1.3
        padding: 0 8px 0 0 
        white-space: nowrap
      .ql-tinymce-form-listbox,
      .ql-tinymce-form-textfield
        background-color: #fff
        border-radius: 3px
        border: 1px solid #ccc
        box-sizing: border-box
        color: #222f3e
        display: block
        font-size: 16px
        height: 34px
        line-height: 24px
        outline: 0
        padding: 5px 4.75px
        resize: none
        width: 100%
        &:focus
          border-color: #207ab7