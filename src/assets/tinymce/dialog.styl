.ql-tinymce-dialog
  position: absolute
  width: 100%
  top: 0
  left: 0
  bottom: 0
  .ql-dialog__mask
    background-color: rgba(0, 0, 0, .05)
    width: 100%
    height: 100%
  .ql-dialog__content
    display: flex;
    flex-direction: column
    background-color: #fff;
    width: 720px;
    height: 480px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid #ccc
    box-shadow: 0 16px 16px -10px rgba(34, 47,62, .15), 0 0 40px 1px rgba(34, 47, 62, .15)
    .ql-dialog__header
      align-items: center;
      background-color: #fff;
      border-bottom: none;
      color: #222f3e;
      display: flex;
      font-size: 16px;
      justify-content: space-between;
      padding: 8px 16px 0 16px;
      position: relative;
    .ql-dialog__footer
      border-top: 1px solid #ccc
      padding: 4px 8px
      display: flex
      justify-content: space-around
      .ql-dialog__start, .ql-dialog__end
        display: inline-block
    .ql-dialog__main
      flex: 1
    .ql-dialog__text
      font-size: 20px;
      font-style: normal;
      font-weight: 400;
      line-height: 1.3;
      margin: 0;
      text-transform: none;